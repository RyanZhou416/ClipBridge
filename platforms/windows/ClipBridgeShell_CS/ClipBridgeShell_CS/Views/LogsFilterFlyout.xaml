<UserControl
    x:Class="ClipBridgeShell_CS.Views.LogsFilterFlyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:l="using:WinUI3Localizer"
    xmlns:helpers="using:ClipBridgeShell_CS.Helpers"
    mc:Ignorable="d"
    MinWidth="400"
    MaxHeight="600">
    
    <UserControl.Resources>
        <helpers:InverseBoolConverter x:Key="InverseBoolConverter" />
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="16" Padding="16">
            
            <!-- 时间戳过滤 -->
            <StackPanel x:Name="TimestampFilterPanel" Spacing="8">
                <TextBlock l:Uids.Uid="LogsFilter_TimeRange" FontWeight="SemiBold" />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <CheckBox x:Name="StartTimeUnlimitedCheckBox" l:Uids.Uid="LogsFilter_StartTimeUnlimited" IsChecked="True" />
                    <DatePicker x:Name="StartDatePicker" IsEnabled="{x:Bind StartTimeUnlimitedCheckBox.IsChecked, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}" />
                    <TimePicker x:Name="StartTimePicker" IsEnabled="{x:Bind StartTimeUnlimitedCheckBox.IsChecked, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <CheckBox x:Name="EndTimeNowCheckBox" l:Uids.Uid="LogsFilter_EndTimeNow" IsChecked="True" />
                    <DatePicker x:Name="EndDatePicker" IsEnabled="{x:Bind EndTimeNowCheckBox.IsChecked, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}" />
                    <TimePicker x:Name="EndTimePicker" IsEnabled="{x:Bind EndTimeNowCheckBox.IsChecked, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}" />
                </StackPanel>
            </StackPanel>
            
            <!-- 级别过滤 -->
            <StackPanel x:Name="LevelFilterPanel" Spacing="8">
                <TextBlock l:Uids.Uid="LogsFilter_Level" FontWeight="SemiBold" />
                <StackPanel Spacing="4">
                    <CheckBox x:Name="LevelTraceCheckBox" l:Uids.Uid="LogsLevelFilter_LevelTrace" IsChecked="True" />
                    <CheckBox x:Name="LevelDebugCheckBox" l:Uids.Uid="LogsLevelFilter_LevelDebug" IsChecked="True" />
                    <CheckBox x:Name="LevelInfoCheckBox" l:Uids.Uid="LogsLevelFilter_LevelInfo" IsChecked="True" />
                    <CheckBox x:Name="LevelWarnCheckBox" l:Uids.Uid="LogsLevelFilter_LevelWarn" IsChecked="True" />
                    <CheckBox x:Name="LevelErrorCheckBox" l:Uids.Uid="LogsLevelFilter_LevelError" IsChecked="True" />
                    <CheckBox x:Name="LevelCriticalCheckBox" l:Uids.Uid="LogsLevelFilter_LevelCritical" IsChecked="True" />
                </StackPanel>
            </StackPanel>
            
            <!-- 组件过滤 -->
            <StackPanel x:Name="ComponentFilterPanel" Spacing="8">
                <TextBlock l:Uids.Uid="LogsFilter_Component" FontWeight="SemiBold" />
                <ScrollViewer MaxHeight="150" VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ComponentCheckBoxList" Spacing="4" />
                </ScrollViewer>
            </StackPanel>
            
            <!-- 分类过滤 -->
            <StackPanel x:Name="CategoryFilterPanel" Spacing="8">
                <TextBlock l:Uids.Uid="LogsFilter_Category" FontWeight="SemiBold" />
                <ScrollViewer MaxHeight="150" VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="CategoryCheckBoxList" Spacing="4" />
                </ScrollViewer>
            </StackPanel>
            
            <!-- 操作按钮 -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                <Button l:Uids.Uid="LogsFilter_ResetButton" Click="OnResetClick" />
                <Button l:Uids.Uid="LogsFilter_ApplyButton" Click="OnApplyClick" Style="{ThemeResource AccentButtonStyle}" />
            </StackPanel>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
