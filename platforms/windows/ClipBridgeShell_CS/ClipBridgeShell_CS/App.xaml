<Application
    x:Class="ClipBridgeShell_CS.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctk="using:CommunityToolkit.WinUI.Controls"
    xmlns:helpers="using:ClipBridgeShell_CS.Helpers">

    <Application.Resources>
        <ResourceDictionary>

            <!-- 合并外部资源字典 -->
            <ResourceDictionary.MergedDictionaries>
                <!-- WinUI 控件库资源 -->
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- 你项目里的样式/尺寸字典 -->
                <ResourceDictionary Source="ms-appx:///Styles/FontSizes.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/Thickness.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/TextBlock.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- 全局开启：让每个 NavigationView 都使用“标题栏自动上内边距” -->
            <Style TargetType="NavigationView">
                <Setter Property="IsTitleBarAutoPaddingEnabled" Value="False"/>
            </Style>

            <!-- 1) 设计令牌（可按需调） -->
            <x:Double  x:Key="PageContentMaxWidth">860</x:Double>

            <x:Double  x:Key="SettingsGroupSpacing">24</x:Double>
            <x:Double  x:Key="SettingsItemSpacing">3</x:Double>

            <!-- SettingsCard 默认外/内边距 -->
            <Thickness x:Key="SettingsCardMargin">0,8,0,0</Thickness>
            <Thickness x:Key="SettingsCardPadding">12,12,12,12</Thickness>

            <!-- 2) 全局调整 NavigationView 的内容区边距 -->
            <Thickness x:Key="NavigationViewContentGridPadding">0</Thickness>
            <Thickness x:Key="NavigationViewContentMargin">0,48,0,0</Thickness> <!-- 内容的上边界 -->
            <Thickness x:Key="NavigationViewMinimalContentMargin">0,48,0,0</Thickness> <!-- 测栏最小化后内容的上边界 -->

            <!-- 3) SettingsCard 隐式样式：全 app 生效 -->
            <Style TargetType="ctk:SettingsCard">
                <Setter Property="Margin"  Value="{StaticResource SettingsCardMargin}"/>
                <Setter Property="Padding" Value="{StaticResource SettingsCardPadding}"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
            </Style>

            <!-- 4) 全局转换器 -->
            <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
