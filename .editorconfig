root = true

# ===== Global defaults =====
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Default to tabs everywhere
indent_style = tab
indent_size = 4

# ===== Rust =====
[*.rs]
indent_style = tab
indent_size = 4

# ===== C# / .NET =====
[*.{cs,csx}]
indent_style = tab
indent_size = 4

# ===== Build / config files (spaces are standard here) =====
[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# ===== Misc =====
[*.toml]
indent_style = space
indent_size = 2
